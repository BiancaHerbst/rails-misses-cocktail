<h1><%= @cocktail.name %></h1>
<ul>
<%@cocktail.doses.each do |dose| %>
<li><%=  dose.description %> <%= dose.ingredient.name %> </li>
<% end %>

</ul>


<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit %>
<% end %>

<p><%= link_to "Back to Cocktails", cocktails_path %></p>

